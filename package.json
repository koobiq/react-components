{
  "name": "koobiq-react",
  "version": "0.21.0",
  "description": "",
  "private": true,
  "workspaces": ["packages/*", "templates/*"],
  "homepage": "https://react.koobiq.io/",
  "engines": {
    "node": ">=20.19",
    "pnpm": ">=9.0.0"
  },
  "firstRelease": false,
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm install && pnpm storybook",
    "build": "turbo run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "type-check": "turbo run type-check",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "format:check": "prettier --check \"**/*.{json,md,mdx,html,yml,yaml,svg}\"",
    "format:write": "prettier --write \"**/*.{json,md,mdx,html,yml,yaml,svg}\"",
    "lint:css": "stylelint '**/*.css' '.storybook/**/*.css'",
    "lint:css:fix": "stylelint '**/*.css' '.storybook/**/*.css' --fix",
    "lint:js": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:js:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint": "pnpm lint:js && pnpm lint:css",
    "lint:fix": "pnpm lint:js:fix && pnpm lint:css:fix",
    "clean": "turbo run clean && rimraf storybook-static && rimraf node_modules",
    "clean:all": "turbo run clean && rimraf storybook-static && rimraf pnpm-lock.yaml && rimraf node_modules",
    "update:deps": "pnpm update --interactive --latest -r",
    "release": "pnpm release:check && pnpm release:version",
    "release:check": "pnpm type-check && vitest --run && pnpm build",
    "release:version": "bumpp",
    "release:publish": "pnpm publish -r"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@koobiq/design-tokens": "^3.15.0",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-links": "^10.1.11",
    "@storybook/react": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@stylistic/eslint-plugin-js": "^2.13.0",
    "@svgr/core": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@svgr/plugin-prettier": "^8.1.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.13",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vueless/storybook-dark-mode": "^10.0.6",
    "browserslist": "^4.25.2",
    "browserslist-to-esbuild": "^2.1.1",
    "bumpp": "^10.1.0",
    "commit-and-tag-version": "^12.5.0",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-jsdoc": "^51.4.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "firebase-tools": "^13.35.1",
    "fs-extra": "^11.3.0",
    "glob": "^11.1.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lightningcss": "^1.29.3",
    "nano-staged": "^0.8.0",
    "postcss-lightningcss": "^1.0.2",
    "postcss-mixins": "^11.0.3",
    "prettier": "^3.6.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "remark-gfm": "^4.0.1",
    "rimraf": "^6.0.1",
    "rollup-preserve-directives": "^1.1.3",
    "storybook": "^10.1.11",
    "stylelint": "^16.25.0",
    "stylelint-config-css-modules": "^4.5.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "stylelint-plugin-logical-css": "^1.2.3",
    "stylelint-prettier": "^5.0.3",
    "tsx": "^4.19.3",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3",
    "vite": "^6.4.1",
    "vite-plugin-lib-inject-css": "^2.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "commit-and-tag-version": {
    "header": "# Changelog\n",
    "tagPrefix": "",
    "types": [
      {
        "type": "feat",
        "section": "ðŸš€ Features"
      },
      {
        "type": "fix",
        "section": "ðŸž Bug Fixes"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "perf",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ],
    "infile": "CHANGELOG.md",
    "scripts": {
      "postchangelog": "git add . && tsx ./scripts/release.ts"
    },
    "skip": {
      "tag": true,
      "bump": true,
      "file": true,
      "commit": true
    }
  },
  "browserslist": [
    "defaults and supports es6-module",
    "chrome > 105",
    "safari > 15.4",
    "firefox > 121",
    "opera > 91",
    "edge > 105"
  ],
  "packageManager": "pnpm@9.12.2",
  "pnpm": {
    "overrides": {
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "@types/react-dom": "^19.0.0",
      "@types/react": "^19.0.0",
      "storybook": "$storybook",
      "react-docgen-typescript": "2.2.2"
    }
  }
}
