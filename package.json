  "commit-and-tag-version": {
    "header": "# Changelog\n",
    "tagPrefix": "",
    "types": [
      {
        "type": "feat",
        "section": "ğŸš€ Features"
      },
      {
        "type": "fix",
        "section": "ğŸ Bug Fixes"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "perf",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ],
    "infile": "CHANGELOG.md",
    "scripts": {
      "postchangelog": "git add . && tsx ./scripts/release.ts"
    },
    "skip": {
      "tag": true,
      "bump": true,
      "file": true,
      "commit": true
    }
  },
  "nano-staged": {
    "**/*.{js,jsx,ts,tsx}": ["eslint --fix", "vitest related --run"],
    "**/*.{json,md,mdx}": ["prettier --write"],
    "**/*.svg": ["prettier --write --parser html"]
  },
  "browserslist": [
    "defaults and supports es6-module",
    "chrome > 105",
    "safari > 15.4",
    "firefox > 121",
    "opera > 91",
    "edge > 105"
  ],
  "packageManager": "pnpm@9.12.2"
}
